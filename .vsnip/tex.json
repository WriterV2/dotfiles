{
    "noveltemplate": {
        "prefix": [
            "noveltemplate"
        ],
        "body": [
            "\\documentclass[ebook, 12pt, oneside, extrafontsizes]{memoir}",
            "\\usepackage[german]{babel}",
            "\\usepackage[utf8]{inputenc}",
            "\\usepackage{ebgaramond}",
            "\\renewcommand{\\baselinestretch}{1.5}",
            "\\begin{document}",
            "\\frontmatter",
            "\\chapterstyle{article}",
            "\\pagestyle{plain}",
            "\\settocdepth{chapter}",
            "\\pagenumbering{gobble}",
            "%\\begin{titlingpage*}",
            "\\title{$1}",
            "\\author{Vithuran Vishnuthas}",
            "\\date{}",
            "\\maketitle",
            "%\\end{titlingpage*}",
            "\\tableofcontents*",
            "\\mainmatter",
            "\\pagenumbering{arabic}",
            "\\chapter{$2}",
            "$3",
            "\\end{document}"
        ],
        "description": "Template for novel (with chapters)"
    },
